% title page の設定
\def\maketitle{ 
    \begin{titlepage}
        \linewidth=\fullwidth
        \setlength{\hoffset}{-40pt}
        \pagestyle{empty}
        \hsize 45zw
        \begin{center}
            % title
            \huge \bfseries 
            \@title
            \par
            \vspace{100pt}
            \begin{figure}[h]
                \centering
                \hspace{45pt}
                \includegraphics[width=.4\linewidth]{fig/logo_NU.pdf}
            \end{figure}
            \vspace{100pt}
            % supervisor
            \Large \normalfont
            指導教官 
            \quad 
            \lineskip .75em
            \Large
            \begin{tabular}[t]{l}
                竹内　一郎
            \end{tabular}
            \par
            % belong
            \large 
            \vspace{60pt}
            \@university \ \@department
            \par \vspace{3pt}
            \@course
            \par \vspace{3pt}
            \@chair
            \par \vspace{10pt}
            \@grade \quad 
            % name
            \bfseries \Large
            \@author 
            \par \vspace{30pt}
        \end{center}
    \end{titlepage}
    % authority page
    \newpage
    \thispagestyle{empty}
    \setlength{\voffset}{0pt}
    \null \vspace{450pt} % 本文の内容を空で埋める
    \begin{flushleft} % 左寄せの内容
        \Large
        Copyright 
        \copyright % © のこと
        \enskip % 大きめの空白
        \@enauthor
        \par \vspace{10pt}
        \@date
    \end{flushleft}
}
